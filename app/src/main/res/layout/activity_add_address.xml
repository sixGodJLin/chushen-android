<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.example.mytime.cooker.ui.AddAddressActivity">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_receiver_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/register_edittext_selector"
            android:hint="请输入收货人姓名"
            android:paddingLeft="7dp"
            android:textColorHint="@color/login_edit_text_style"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/add_receiver_addressInfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/register_edittext_selector"
            android:hint="请输入收货人地址"
            android:paddingLeft="7dp"
            android:textColorHint="@color/login_edit_text_style"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/add_receiver_postCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/register_edittext_selector"
            android:hint="请输入邮编"
            android:paddingLeft="7dp"
            android:textColorHint="@color/login_edit_text_style"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/add_receiver_tel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:background="@drawable/register_edittext_selector"
            android:hint="请输入收货人联系电话"
            android:paddingLeft="7dp"
            android:textColorHint="@color/login_edit_text_style"
            android:textSize="22sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="2dp"
        android:background="@drawable/login_btn_selector"
        android:text="保存"
        android:textColor="@color/blue_light"
        android:textSize="22sp" />

</LinearLayout>
