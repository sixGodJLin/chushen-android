<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/add_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="陈某某"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/add_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="13025626232"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/add_item_addinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:padding="10dp"
        android:text="浙江省宁波市鄞州区学院路899号"
        android:textColor="@color/text_color_black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/add_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/checkbox_selector"
            android:text="默认地址"
            android:textColor="@drawable/text_selector"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/add_item_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/address_style"
                android:text="编辑"
                android:textColor="@color/text_color_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/add_item_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/address_style"
                android:text="删除"
                android:textColor="@color/text_color_black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>